{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "Node",
    "module": "ESNext"
  },
  "exclude": ["dist"],
  "include": ["src"]
}
